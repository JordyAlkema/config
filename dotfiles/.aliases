# Functions {{{1

function giap {
    hub init
    hub add .
    hub commit -m "Initial commit"
    hub create
    hub push -u origin master
}

function hub() {
    if [[ "$@" == "unstage" ]]; then
        command hub reset HEAD
    elif [[ "$@" == "uncommit" ]]; then
        command hub reset HEAD~
    elif [[ "$@" == "restore" ]]; then
        command hub reset --hard HEAD
    else
        command hub "$@"
    fi
}

function prepend() {
    cat - "$@" | sponge "$@"
}

function fork() { nohup "$@" </dev/null >/dev/null 2>&1 &; disown }

function math() { echo $(($@)) }

function mkcd() { mkdir "$@"; cd "$@" }

function terminal() { fork alacritty --working-directory . -e 'ranger' }

function random_characters() {}
function random_lines()
{
    tr -dc a-z1-4 </dev/urandom |
    tr 1-2 ' \n' |
    awk 'length==0 || length>50' |
    tr 3-4 ' ' |
    sed 's/^ *//' |
    cat -s |
    sed 's/ / /g' |
    fmt |
    head -n "$1"
}
function random_number() { echo ${RANDOM} }
function random_words() { shuf /usr/share/dict/cracklib-small -rn }


