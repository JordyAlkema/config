function pip {
    if [[ "$1" == "install" ]]; then
        command pip "$@" --user
    else
        command pip "$@"
    fi
}

# running ranger in a subshell of an already running ranger just exists that shell
function ranger {
    if [ -n "$RANGER_LEVEL" ]; then
        exit
    else
        command ranger "$@"
    fi
}

function yay {
    if [[ "$1" == "-S" ]]; then
        command yay "$@" --needed --mflags '--nocheck'
    elif [[ "$1" == "-R" ]]; then
        command yay "$@" --recursive
    else
        command yay "$@"
    fi
}

