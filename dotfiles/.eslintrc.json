{
    "root": true,

    "parser": "babel-eslint",

    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jquery": true
    },

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "generators": true
        }
    },

    "plugins": [
        "react"
    ],

    "rules": {
        "dot-location": ["error", "property"],
        "eqeqeq": "error",
        "lines-between-class-members": ["error", "always"],
        "max-len": ["warn", 80],
        "no-multiple-empty-lines": ["error", {"max": 1, "maxBOF": 0, "maxEOF": 0}],
        "no-tabs": "error",
        "no-undef": "error",
        "no-unused-vars": "warn",
        "semi": ["error", "never"],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],

        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
}
