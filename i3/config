# vim:ft=i3

# Keybinds {{{1

set $mod Mod1

floating_modifier $mod
bindsym $mod+Shift+space floating toggle

# Window Settings {{{1

new_window pixel 3
new_float pixel 3

client.focused #FF0000 #FF0000 #FF0000 #FF0000
# client.focused #333333 #333333 #333333 #333333

gaps inner 5
gaps outer 0

focus_follows_mouse yes
smart_borders on
smart_gaps on


# applications and settings

exec --no-startup-id startup
exec --no-startup-id reload-settings
