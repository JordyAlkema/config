snippet cpp "C++ Makefile" b
EXE      = ${1}

CC       = g++
CFLAGS   = -g -Wall

SRCFILES = $(shell find . -name "*.cpp")
OBJFILES = $(SRCFILES:.cpp=.o)

.PHONY: all
all: $(EXE)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $<

$(EXE): $(OBJFILES)
	$(CC) $(CFLAGS) -o $@ $+

.PHONY: clean
clean:
	$(RM) *.o vgcore.*

.PHONY: distclean
distclean: clean
	$(RM) $(EXE)
endsnippet
snippet java "Java Makefile" bw
EXE      = ${1}

JC       = javac
JAVA	 = java
JFLAGS   = -g

SRCFILES = $(shell find . -name "*.java")
DEPFILES = $(shell find . -name "*.java" | grep -v p1.java)
CLAFILES = $(SRCFILES:.java=.class)

.PHONY: all
all: $(EXE).java

$(EXE).java: $(DEPFILES)
	$(JC) $(JFLAGS) $@

.PHONY: run
run:
	$(JAVA) $(EXE)

.PHONY: clean
clean:
	$(RM) *.class
endsnippet
