//! [events]
//! keys = ['ESC', 'LEFTSHIFT', '9', '0']
fn main() ~ evdevs, uinput {
    should_esc := false
    loop {
        events := next_events(evdevs)
        for i len(events) {
            event := events[i]
            xcape(mut should_esc, event, KEY_LEFTCTRL(), [KEY_ESC()])
        }
    }
}
