# meta_keys {{{1

XF86Audio{LowerVolume,RaiseVolume,Mute,MicMute}
	pamixer {-d 5,-i 5 --allow-boost,-t,--default-source -t}

XF86MonBrightness{Down,Up}
	light -{U,A} 5%

XF86Audio{Play,Stop,Prev,Next}
    playerctl {play-pause,stop,previous,next}


# control {{{1

alt + m
    playerctl play-pause

alt + shift + r
    bash -c "$SOURCE_ALIASES; reload-settings"; i3-msg reload


# applications {{{1

alt + Return
    $TERMINAL

alt + r
	$TERMINAL -e ranger

alt + b
	$BROWSER

alt + a
	$TERMINAL -e vimclip

alt + o
	$TERMINAL -e gotop

alt + e
	$TERMINAL -e nvim

alt + grave
    rofi -show run -modi run,ssh


# wm {{{1

alt + {_, shift +} {h,j,k,l}
	i3-msg {focus, move} {left,down,up,right}

alt + ctrl + shift + {h,j,k,l}
	i3-msg resize {grow width,shrink height,grow height,shrink width} 5 px or 5 ppt

alt + {s,v}
	i3-msg split {v,h}

alt + f
	i3-msg fullscreen toggle

alt + t
	i3-msg layout toggle split

alt + T
	i3-msg layout toggle tabbed split

alt + {p,c}
	i3-msg focus {parent,child}

alt + {_, shift + } w
	{i3-msg,xdo} kill

alt + space
	i3-msg focus mode_toggle

alt + minus
	i3-msg scratchpad show

alt + shift + minus
	i3-msg move scratchpad

alt + Tab
    i3-msg workspace back_and_forth

## i3-workspace-groups

alt + {_, shift +} {0-9}
	i3-workspace-groups {focus-workspace,move-container-to-workspace} {10,1-9}

alt + ctrl + {_, shift +} {0-9}
	i3-msg {workspace number,move to workspace number} {10,1-9}

alt + {_, shift +, ctrl + shift +} g
	i3-workspace-groups {focus-group,move-container-to-group,rename-group}
