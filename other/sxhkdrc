# meta_keys {{{1

XF86Audio{Lower,Raise}Volume
	pulseaudio-ctl {down,up}

XF86AudioMute
	pulseaudio-ctl mute

XF86AudioMicMute
    pulseaudio-ctl mute-input

XF86MonBrightness{Down,Up}
	light -{U,A} 5%


# applications {{{1

alt + r
	alacritty -e ranger

alt + Return
	alacritty

alt + b
	chrome --remote-debugging-port=9222

alt + a
	alacritty -e vimclip

alt + o
	alacritty -e gotop

alt + e
	alacritty -e nvim

alt + grave
    rofi -show run -modi run,ssh


# wm {{{1

alt + {_, shift +} {h,j,k,l}
	i3-msg {focus, move} {left,down,up,right}

alt + ctrl + shift + {h,j,k,l}
	i3-msg resize {grow width,shrink height,grow height,shrink width} 5 px or 5 ppt

alt + {s,v}
	i3-msg split {v,h}

alt + f
	i3-msg fullscreen toggle

alt + t
	i3-msg layout toggle split

alt + T
	i3-msg layout toggle tabbed split

alt + {p,c}
	i3-msg focus {parent,child}

alt + shift + r
	detect-monitor; i3-msg reload; reload-settings

alt + {_, shift + } w
	{i3-msg,xdo} kill

alt + space
	i3-msg focus mode_toggle

alt + minus
	i3-msg scratchpad show

alt + shift + minus
	i3-msg move scratchpad

alt + {_, shift +} {0-9}
	i3-workspace-groups {focus-workspace,move-container-to-workspace} {10,1-9}

alt + ctrl + {_, shift +} {0-9}
	i3-msg {workspace number,move to workspace number} {10,1-9}

alt + {_, shift +, ctrl + shift +} g
	i3-workspace-groups {focus-group,move-workspace-to-group,rename-group}

alt + Tab
    i3-msg workspace back_and_forth
