[module/cpu]
type = internal/cpu
interval = 5
format-prefix = " CPU "
format-prefix-foreground = ${colors.violet}
format-prefix-background = ${colors.light}
label = %percentage%%
label-foreground = ${colors.violet}
label-background = ${colors.light}


[module/ram]
type = internal/memory
interval = 1
format-prefix = " RAM "
format-prefix-foreground = ${colors.cyan}
format-prefix-background = ${colors.dark}
; label = %percentage_used%%
label = "%gb_free%"
label-foreground = ${colors.cyan}
label-background = ${colors.dark}


[module/volume]
type = custom/script
exec = ~/config/polybar/subscribe-volume
tail = true
click-right = exec pavucontrol &
click-left = pulseaudio-ctl mute
scroll-up = pulseaudio-ctl up
scroll-down = pulseaudio-ctl down
label = " %output%"
label-background = ${colors.dark}
label-foreground = ${colors.blue}


[module/brightness]
type = custom/script
exec = ~/config/polybar/subscribe-brightness
tail = true
label = " %output%"
scroll-up = light -A 10%
scroll-down = light -U 10%
label-foreground = ${colors.yellow}
label-background = ${colors.light}

click-left = alacritty
