font-2 = Hack:pixelsize=20;4
font-4 = FontAwesome:pixelsize=12;3

modules-left = i3 right_arrow_dark
modules-center = left_arrow_dark day left_arrow_light time right_arrow_light date right_arrow_dark
modules-right = left_arrow_dark volume left_arrow_light brightness left_arrow_dark ram left_arrow_light cpu left_arrow_dark temperature left_arrow_light battery left_arrow_dark

tray-position = right
tray-background = ${colors.dark}
tray-detached = false
;tray-padding = 2

;wm-restack = bspwm


