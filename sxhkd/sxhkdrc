# meta_keys {{{1

XF86Audio{Lower,Raise}Volume
	volume-control {--down,--up}

XF86AudioMute
	volume-control --mute

XF86AudioMicMute
    volume-control --mic-mute

XF86MonBrightness{Down,Up}
	brightness-control --{down,up}


# applications {{{1

alt + r
	alacritty -e ranger

alt + Return
	alacritty

alt + g
	chrome --remote-debugging-port=9222

alt + a
	vim-anywhere nvim alacritty

alt + o
	alacritty -e gotop

alt + e
	alacritty -e nvim


# rofi {{{1

alt + d
	rofi -show run -terminal $term

alt + y
	rofi-power

alt + u
	open-greenclip


# i3 {{{1

alt + {_, shift +} {h,j,k,l}
	i3-msg {focus, move} {left,down,up,right}

alt + shift + ctrl + {h,j,k,l}
	i3-msg resize {grow width,shrink height,grow height,shrink width} 5 px or 5 ppt

alt + {s,v}
	i3-msg split {v,h}

alt + f
	i3-msg fullscreen toggle

alt + t
	i3-msg layout toggle split

alt + T
	i3-msg layout toggle tabbed split

alt + {p,c}
	i3-msg focus {parent,child}

alt + shift + r
	monitor-script; i3-msg reload; reload-settings

alt + {_, shift + } w
	{i3-msg kill,xdo kill}

alt + space
	i3-msg focus mode_toggle

alt + minus
	i3-msg scratchpad show

alt + shift + minus
	i3-msg move scratchpad

alt + {_, shift +} {0-9}
	i3-msg { ,move container to} workspace {10,1-9}
