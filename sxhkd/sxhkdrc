# meta_keys {{{1

XF86Audio{Lower,Raise}Volume
	volume-control {--down,--up}

XF86AudioMute
	volume-control --mute

XF86AudioMicMute
    volume-control --mic-mute

XF86MonBrightness{Down,Up}
	brightness-control --{down,up}


# applications {{{1

alt + r
	alacritty -e ranger

alt + Return
	alacritty

alt + g
	chrome --remote-debugging-port=9222

alt + a
	vim-anywhere nvim alacritty

alt + o
	alacritty -e gotop

alt + e
	alacritty -e nvim


# rofi {{{1

alt + d
	rofi -show run -terminal $term

alt + y
	rofi-power

alt + u
	open-greenclip


