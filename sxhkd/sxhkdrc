# meta_keys {{{1

XF86Audio{Lower,Raise}Volume
	volume-control {--down,--up}

XF86AudioMute
	volume-control --mute

XF86AudioMicMute
    volume-control --mic-mute

XF86MonBrightness{Down,Up}
	brightness-control --{down,up}


# applications {{{1

alt + r
	alacritty -e ranger

alt + Return
	alacritty

alt + g
	chrome --remote-debugging-port=9222

alt + a
	vim-anywhere nvim alacritty

alt + o
	alacritty -e gotop

alt + e
	alacritty -e nvim


# rofi {{{1

alt + d
	rofi -show run -terminal $term

alt + y
	rofi-power

alt + u
	open-greenclip


# bspwm {{{1

alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

alt + ctrl + space
	bspc node -p cancel

alt + ctrl + shift + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

alt + {_,shift + }w
	bspc node -{c,k}

alt + {p,c}
	bspc node -f @{parent,first}

alt + f
	bspc desktop -l next

alt + shift + r
	monitor-script; .config/bspwm/bspwmrc
