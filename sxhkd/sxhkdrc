# meta_keys {{{1

XF86Audio{Lower,Raise}Volume
    amixer set Master 5%{-,+} unmute

XF86AudioMute
    amixer -D pulse set Master 1+ toggle

XF86AudioMicMute
    pactl set-source-mute 1 toggle

XF86MonBrightness{Down,Up}
    echo $(($(cat /sys/class/backlight/intel_backlight/brightness) {-,+} 106)) | sudo tee /sys/class/backlight/intel_backlight/brightness


# applications {{{1

alt + {e,r,m}
	alacritty -e {nvim,ranger,neomutt}

alt + Return
	alacritty

alt + g
	chrome

alt + d
	rofi -show run -terminal $term
alt + shift + e
	rofi_power

alt + n
	pomodoro_reset
